#!/usr/bin/env bash
# templedb TUI launcher

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Check if textual is installed
if ! python3 -c "import textual" 2>/dev/null; then
    echo "‚ùå Dependencies not installed"
    echo ""
    echo "Option 1: Use Nix (recommended)"
    echo "  nix-shell -p python311Packages.textual python311Packages.rich"
    echo "  python3 $SCRIPT_DIR/src/templedb_tui.py"
    echo ""
    echo "Option 2: Install with pip (if not in Nix environment)"
    echo "  pip3 install --user textual rich"
    echo "  $0"
    echo ""
    exit 1
fi

# Launch TUI
python3 "$SCRIPT_DIR/src/templedb_tui.py" "$@"
